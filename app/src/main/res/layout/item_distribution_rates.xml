<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/secondary"
        >

        <TextView
            android:id="@+id/ota_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agoda"
            android:textSize="@dimen/headingText"
            android:textColor="@color/primary"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/ota_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 50079"
            android:textSize="@dimen/headingText"
            android:textColor="#E2E1E1"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ota_Name"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/channel_rate_type_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Rate Type :"
            android:textSize="@dimen/headingText"
            android:textColor="#E2E1E1"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ota_code"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/rate_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net"
            android:textSize="@dimen/headingText"
            android:textColor="#E2E1E1"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/channel_rate_type_heading"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_child_distribution_rates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frame1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>