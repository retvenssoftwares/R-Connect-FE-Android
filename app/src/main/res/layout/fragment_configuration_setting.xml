<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Base.Theme.ChannelManager"
    android:background="@color/primarybackground"
    tools:context=".PropertyConfiguration.ConfigurationSettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >



    <TextView
        android:id="@+id/config_Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Hi, Rahul"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/headingText"
        android:textColor="#08041D"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/subHeadingConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/config_Heading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Here are your all properties"
        android:textColor="@color/subtitle"
        android:textSize="@dimen/mediumHeadingText"
        android:fontFamily="@font/inter"
        />

    <RelativeLayout
        android:id="@+id/hotel_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/subHeadingConfig"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/hotel_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Hotels"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/headingText"
            android:textStyle="bold"
            android:textColor="#121212"
            android:layout_marginStart="20dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/owner_hotel_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/hotel_heading"
            android:layout_marginTop="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/places_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hotel_frame"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/places_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Places where youâ€™re available"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/headingText"
            android:textStyle="bold"
            android:textColor="#121212"
            android:layout_marginStart="20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/places_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/places_heading"
            android:layout_marginTop="15dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/places_frame"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primarybackground"
        >

        <TextView
            android:id="@+id/revenue_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue Status"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/headingText"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="#121212"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue statistics"
            android:layout_below="@+id/revenue_heading"
            android:layout_marginTop="40dp"
            android:layout_marginStart="22dp"
            android:textSize="@dimen/mediumHeadingText"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="#121212"
            />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="750dp"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/barchart"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/secondary"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_light"
                    android:text="Total Revenue"
                    android:textColor="@color/primarybackground"
                    android:textSize="@dimen/smallText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="$915,000"
                    android:textSize="@dimen/HeadingSize"
                    android:textColor="@color/primarybackground"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_bold"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="240dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#8E9ABB"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vector_dollor"
                        android:layout_gravity="center"
                        />

                </androidx.cardview.widget.CardView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:backgroundTint="#3A3F5B"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_light"
                    android:text="Total Revenue"
                    android:textColor="@color/primarybackground"
                    android:textSize="@dimen/smallText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="$915,000"
                    android:textSize="@dimen/HeadingSize"
                    android:textColor="@color/primarybackground"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_bold"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="240dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#8E9ABB"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vector_dollor"
                        android:layout_gravity="center"
                        />

                </androidx.cardview.widget.CardView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/secondary"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_light"
                    android:text="Total Revenue"
                    android:textColor="@color/primarybackground"
                    android:textSize="@dimen/smallText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="$915,000"
                    android:textSize="@dimen/HeadingSize"
                    android:textColor="@color/primarybackground"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_bold"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="240dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#8E9ABB"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vector_dollor"
                        android:layout_gravity="center"
                        />

                </androidx.cardview.widget.CardView>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>