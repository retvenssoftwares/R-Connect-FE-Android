<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:src="@color/secondary"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shahpura House Hotel"
        android:fontFamily="@font/montserrat"
        android:textSize="15dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/profilePic"
        app:layout_constraintTop_toTopOf="@id/profilePic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 days ago"
        android:fontFamily="@font/montserrat"
        android:textSize="13dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/profilePic"
        app:layout_constraintTop_toBottomOf="@id/name"/>

   <com.google.android.material.imageview.ShapeableImageView
       android:id="@+id/profilePicLarge"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:src="@color/secondary"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"/>

    <TextView
        android:id="@+id/review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text "
        android:fontFamily="@font/montserrat"
        android:textSize="14dp"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/profilePicLarge"
        app:layout_constraintEnd_toStartOf="@id/profilePicLarge"
        app:layout_constraintStart_toStartOf="@id/profilePic"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="5"
        android:progressTint="@color/black"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/review"
        app:layout_constraintStart_toStartOf="@id/review"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="14dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/ratingBar"
        app:layout_constraintStart_toEndOf="@id/ratingBar"
        app:layout_constraintTop_toTopOf="@id/ratingBar"/>



</androidx.constraintlayout.widget.ConstraintLayout>