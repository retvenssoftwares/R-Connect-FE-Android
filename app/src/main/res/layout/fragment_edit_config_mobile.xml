<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mobile.sidenav.EditConfigMobileFragment">

    <TextView
        android:id="@+id/adminName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hii Hotel"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="12dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/here"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Here are your all properties"
        android:textSize="14dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat"
        app:layout_constraintStart_toStartOf="@id/adminName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminName"/>

    <TextView
        android:id="@+id/popularHotels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Popular Hotels"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/here"/>

    <TextView
        android:id="@+id/seeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="@id/popularHotels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/popularHotels"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popularHotelRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/popularHotels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddProperty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/secondary"
        app:layout_constraintTop_toBottomOf="@id/popularHotelRecycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Property"
            android:textSize="16dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="6dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/primary"
            android:fontFamily="@font/montserrat_bold"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/places"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Places where youâ€™re available"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardAddProperty"/>

    <TextView
        android:id="@+id/seeAllPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="@id/places"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/places"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/item_all_places_mobile"
        app:layout_constraintTop_toBottomOf="@id/places"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/revenueStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Revenue status"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placesRecycler"/>

    <TextView
        android:id="@+id/seeAllRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="@id/revenueStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/revenueStatus"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seeAllRevenue"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/barChart">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/secondary">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Revenue"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintEnd_toStartOf="@id/ri"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/revenue_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 915,000"
                    android:textSize="12dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/ri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_doller"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/revenue_price"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="#3A3F5B">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New \nCustomers"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintEnd_toStartOf="@id/ci"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/newCustomers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15,000"
                    android:textSize="14dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_people"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/newCustomers"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/secondary">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Trip"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintEnd_toStartOf="@id/ti"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/totalTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,000"
                    android:textSize="14dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_airplane"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/totalTrip"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>