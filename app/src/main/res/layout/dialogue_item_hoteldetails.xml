<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/frame_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/png_avtar"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_profile"
            android:text="Setup by Admin"
            android:textSize="@dimen/headingText"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#08041D"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/user_profile"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_profile"
            android:text="Last edited by - Aman Sharma at 28 August 2023, 12:24PM "
            android:textSize="@dimen/subheadingText"
            android:fontFamily="@font/poppins"
            android:textColor="@color/subtitle"
            android:layout_marginStart="20dp"
            android:layout_alignBottom="@+id/user_profile"

            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/vector_dark_notification"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/property_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frame_header"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="Shahpura House"
        android:textSize="@dimen/HeadingSize"
        android:textColor="#121212"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/move_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/frame_header"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/secondary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dive to Shahpura House"
            android:layout_gravity="center"
            android:textSize="@dimen/mediumHeadingText"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginHorizontal="10dp"
            />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/full_hotel_image"
        android:layout_width="350dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@+id/property_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:shapeAppearance="@style/FullImageDisplay"
        android:src="@drawable/png_hotel1"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/full_hotel_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/full_hotel_image"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        >
        
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:src="@drawable/png_hotel3"
            android:scaleType="fitXY"

            />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:src="@drawable/png_hotel3"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"
            />
        
    </LinearLayout>


    <LinearLayout
        android:id="@+id/heading_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/full_hotel_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:layout_gravity="center"
                android:textSize="@dimen/headingText"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/primary"
                />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:backgroundTint="@color/primary"
                android:background="@color/primary"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:layout_gravity="center"
                android:textSize="@dimen/headingText"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/subtitle"
                />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:backgroundTint="@color/primary"
                android:background="@color/primary"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facilities"
                android:textSize="@dimen/headingText"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:textColor="@color/subtitle"
                />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:backgroundTint="@color/primary"
                android:background="@color/primary"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:layout_gravity="center"
                android:textSize="@dimen/headingText"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/subtitle"
                />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:backgroundTint="@color/primary"
                android:background="@color/primary"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/overview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heading_linear"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:text="Shahpura House is a hotel located in the west of New York City. This hotel is very cool with a very beautiful and minimalistic architecture of the room Read more....."
        android:textSize="@dimen/mediumHeadingText"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins"
        android:textColor="@color/subtitle"
        />

    <TextView
        android:id="@+id/location_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        app:layout_constraintTop_toBottomOf="@+id/overview_text"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textSize="@dimen/headingText"
        android:textColor="@color/black"

        />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_show"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/location_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>