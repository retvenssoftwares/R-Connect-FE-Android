<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PropertyDashboard.manageRooms.amenities.AminitiesFragment">

    <TextView
        android:id="@+id/heading_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Amenities"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_bold"
        android:textSize="@dimen/headingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_list"
        android:layout_width="400dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_title"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:cardElevation="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Amenities"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/mediumHeadingText"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Added by me"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/mediumHeadingText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Added"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/mediumHeadingText"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_Search"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/heading_title"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/card_list"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchBar_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:startIconDrawable="@drawable/vector_small_search"
            app:endIconMode="custom"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search Amenities"
                android:paddingLeft="20dp"
                android:fontFamily="@font/inter"
                android:background="@color/primarybackground"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/mediumHeadingText"
                />



        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_amenities_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/heading_title"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="70dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/primary"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/vector_add_icon"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/filter_amenities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/vector_filter_amenities"
        app:layout_constraintTop_toTopOf="@+id/add_amenities_card"
        app:layout_constraintBottom_toBottomOf="@id/add_amenities_card"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/card_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/items_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Amenities list"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/headingText"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Amenities Name"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/headingText"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Amenities Type"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/headingText"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Created By"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/headingText"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Modified By"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/headingText"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/headingText"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_dots"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_all_amenities"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/items_linear"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>