<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/drawerLayout"
    tools:context=".mobile.hotelDashboard.HotelActivityMobile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/secondary"
            android:elevation="4dp"
            android:gravity="start"
            android:subtitleTextColor="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:titleTextColor="@android:color/white"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shahpura House Hotel"
                    android:textSize="15dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginStart="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:id="@+id/hotel_dashboard_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="340dp"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="9dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            android:src="@drawable/svg_chef"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shahpura House Hotel"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginStart="12dp"
                            android:textSize="16dp"
                            android:textColor="@color/secondary"
                            android:fontFamily="@font/montserrat_bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardlayout"
                        android:backgroundTint="#4DACD037"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_dashboard"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="Property Dashboard"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_distribution_rates"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="Manage Rooms"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_rates_inventory"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="Manage Rates"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_bookings"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="Housekeeping"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_channel_logs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="Masters Settings"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_channel_mappings"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="General Settings"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_packages"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="Booking Engine Configuration"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/svg_vertical_bar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/svg_packages"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:textFontWeight="500"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:paddingStart="10dp"
                            android:text="Manage Hotel Gallery"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginVertical="12dp"
                    app:cardCornerRadius="12dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="@color/primary">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Please, curate your
properties through button bellow!"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="18dp"
                            app:layout_constraintEnd_toStartOf="@id/chef"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <ImageView
                            android:id="@+id/chef"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_chef"
                            android:layout_margin="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/editConfiguration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Configuration"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="7dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintHorizontal_bias="0.3"
                            android:background="@drawable/cardlayout"
                            android:backgroundTint="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text"
                            app:layout_constraintEnd_toStartOf="@id/chef"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R-Connect Hotel Channel Manager"
                    android:textColor="@color/subtitle"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18dp"
                    android:layout_marginStart="25dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="© 2023 All Rights Reserved"
                    android:textColor="@color/subtitle"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Made with ♥ in INDIA"
                    android:textColor="@color/subtitle"
                    android:textFontWeight="700"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="25dp"
                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>