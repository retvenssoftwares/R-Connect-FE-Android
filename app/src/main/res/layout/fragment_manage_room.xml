<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondarybackground"
    tools:context=".PropertyDashboard.ManageRoomFragment">

   <RelativeLayout
       android:id="@+id/frame_lists"
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:background="@color/primarybackground"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:elevation="8dp"
       >

      <LinearLayout
          android:id="@+id/ll2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_centerVertical="true"

          android:layout_marginStart="20dp"
          >

         <androidx.cardview.widget.CardView
             android:id="@+id/card_booking"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:cardCornerRadius="8dp"
             app:cardElevation="3dp"
             android:layout_marginVertical="12dp"
             android:layout_marginStart="12dp"
             app:cardBackgroundColor="@color/primary">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="2dp"
                app:cardBackgroundColor="@color/white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/white"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:padding="6dp">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/vector_people"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:paddingStart="2dp"
                      android:textSize="12dp"
                      android:text="Amenities"/>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

         </androidx.cardview.widget.CardView>



         <androidx.cardview.widget.CardView
             android:id="@+id/card_arrival"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:cardCornerRadius="8dp"
             app:cardElevation="3dp"
             android:layout_marginVertical="12dp"
             android:layout_marginStart="12dp"
             app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="2dp"
                app:cardBackgroundColor="@color/white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/white"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:padding="6dp">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/vector_people"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:paddingStart="2dp"
                      android:textSize="12dp"
                      android:text="Room Type"/>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/card_departure"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:cardCornerRadius="8dp"
             app:cardElevation="3dp"
             android:layout_marginVertical="12dp"
             android:layout_marginStart="12dp"
             app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="2dp"
                app:cardBackgroundColor="@color/white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/white"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:padding="6dp">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/vector_people"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:paddingStart="2dp"
                      android:textSize="12dp"
                      android:text="Bed Type"/>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

         </androidx.cardview.widget.CardView>



         <androidx.cardview.widget.CardView
             android:id="@+id/cancellations_card"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:cardCornerRadius="8dp"
             app:cardElevation="3dp"
             android:layout_marginVertical="12dp"
             android:layout_marginStart="12dp"
             app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="2dp"
                app:cardBackgroundColor="@color/white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@color/white"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:padding="6dp">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/vector_people"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:paddingStart="2dp"
                      android:textSize="12dp"
                      android:text="Rooms"/>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

         </androidx.cardview.widget.CardView>


      </LinearLayout>
   </RelativeLayout>

   <TextView
       android:id="@+id/heading_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="List of Amenities"
       app:layout_constraintTop_toBottomOf="@+id/frame_lists"
       android:layout_marginTop="10dp"
       android:layout_marginStart="20dp"
       app:layout_constraintStart_toStartOf="parent"
       android:textColor="@color/black"
       android:fontFamily="@font/inter_bold"
       android:textSize="@dimen/headingText"
       />
   
   
   <androidx.cardview.widget.CardView
       android:id="@+id/card_list"
       android:layout_width="400dp"
       android:layout_height="50dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/heading_title"
       app:cardCornerRadius="10dp"
       android:layout_marginStart="20dp"
       android:layout_marginTop="10dp"
       app:cardElevation="8dp"
       >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center"
          >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="All Amenities"
             android:layout_gravity="center"
             android:fontFamily="@font/inter_medium"
             android:textColor="@color/textcolor"
             android:textSize="@dimen/mediumHeadingText"
             />


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Added by me"
             android:layout_gravity="center"
             android:layout_marginStart="20dp"
             android:fontFamily="@font/inter_medium"
             android:textColor="@color/subtitle"
             android:textSize="@dimen/mediumHeadingText"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Already Added"
             android:layout_marginStart="20dp"
             android:layout_gravity="center"
             android:fontFamily="@font/inter_medium"
             android:textColor="@color/subtitle"
             android:textSize="@dimen/mediumHeadingText"
             />

      </LinearLayout>

   </androidx.cardview.widget.CardView>
   
   <androidx.cardview.widget.CardView
       android:id="@+id/card_Search"
       android:layout_width="250dp"
       android:layout_height="50dp"
       app:layout_constraintTop_toBottomOf="@+id/heading_title"
       android:layout_marginTop="10dp"
       app:layout_constraintStart_toEndOf="@id/card_list"
       android:layout_marginStart="20dp"
       app:cardCornerRadius="10dp"
       app:cardElevation="8dp"
      >

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/searchBar_Layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:startIconDrawable="@drawable/vector_small_search"
          app:endIconMode="custom"
          >

         <com.google.android.material.textfield.TextInputEditText
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:hint="Search Amenities"
             android:paddingLeft="20dp"
             android:fontFamily="@font/inter"
             android:background="@color/primarybackground"
             android:textColor="@color/subtitle"
             android:textSize="@dimen/mediumHeadingText"
             />



      </com.google.android.material.textfield.TextInputLayout>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/add_amenities_card"
       android:layout_width="60dp"
       android:layout_height="60dp"
       app:layout_constraintTop_toBottomOf="@id/heading_title"
       android:layout_marginTop="10dp"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginEnd="70dp"
       app:cardCornerRadius="5dp"
       android:backgroundTint="@color/primary"
       >

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/vector_add_icon"
          android:layout_margin="20dp"
          android:layout_gravity="center"
          />

   </androidx.cardview.widget.CardView>


   <ImageView
       android:id="@+id/filter_amenities"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:cardCornerRadius="5dp"
       android:layout_marginEnd="30dp"
       android:src="@drawable/vector_filter_amenities"
       app:layout_constraintTop_toTopOf="@+id/add_amenities_card"
       app:layout_constraintBottom_toBottomOf="@id/add_amenities_card"

      />
   
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="500dp"
       app:layout_constraintTop_toBottomOf="@+id/card_list"
       android:layout_marginTop="20dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:cardCornerRadius="15dp"
       android:layout_marginHorizontal="20dp"
       app:cardElevation="8dp"
      >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

         <LinearLayout
             android:id="@+id/items_linear"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginHorizontal="20dp"
             android:layout_marginTop="20dp"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amenities list"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/headingText"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amenities Name"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/headingText"
                android:layout_marginStart="100dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amenities Type"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/headingText"
                android:layout_marginStart="60dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created By"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/headingText"
                android:layout_marginStart="60dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modified By"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/headingText"
                android:layout_marginStart="90dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/headingText"
                android:layout_marginStart="60dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:src="@drawable/setting_dots"
                android:layout_marginStart="100dp"
                />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="70dp"
             app:layout_constraintTop_toBottomOf="@+id/items_linear"
             android:layout_marginTop="10dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginHorizontal="20dp"
             android:orientation="horizontal"
             >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:src="@drawable/png_room"
                app:shapeAppearance="@style/PanoramaView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi"
                android:layout_gravity="center"
                android:layout_marginStart="190dp"
                android:textSize="@dimen/headingText"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/subtitle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room"
                android:layout_gravity="center"
                android:layout_marginStart="150dp"
                android:textSize="@dimen/headingText"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/subtitle"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="Room"
                android:layout_gravity="center"
                android:layout_marginStart="130dp"

                />

         </LinearLayout>


      </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>