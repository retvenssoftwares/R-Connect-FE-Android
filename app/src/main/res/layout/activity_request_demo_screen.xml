            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordImport_layout"
                android:layout_width="@dimen/FullEditText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="Password*"
                android:layout_marginStart="80dp"
                app:layout_constraintTop_toBottomOf="@+id/EmailImport_layout"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:hintTextColor="@color/secondary"
                android:layout_marginTop="20dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordImport_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_light"
                    android:inputType="text"
                    android:textColorHint="@color/secondary"
                    android:textColor="@color/secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/termcheckCard1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="@style/ThemeOverlay.Material3"
                app:strokeColor="@color/secondary"
                app:strokeWidth="2dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/passwordImport_layout"
                android:layout_marginStart="90dp"
                app:layout_constraintStart_toStartOf="parent"
                >
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/check"
                android:visibility="gone"
                />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/termHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/termcheckCard1"
                app:layout_constraintTop_toTopOf="@+id/termcheckCard1"
                app:layout_constraintBottom_toBottomOf="@+id/termcheckCard1"
                android:layout_marginStart="10dp"
                android:text="I have read and agree to the Terms of Service"
                android:textSize="16dp"
                android:textColor="@color/subtitle"
                />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="200dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/termHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/secondary"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/inter_bold"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    />

            </com.google.android.material.card.MaterialCardView>

